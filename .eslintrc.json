{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [2, {"vars": "all", "args": "none"}],
        "no-param-reassign": [2, { "props": false }],
        "no-underscore-dangle": [2, { "allow": ["_id"] }],
        "no-console": "off"

    }
}